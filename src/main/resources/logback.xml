<configuration>
    <!--                                                      %-5level이 무엇이느냐. 왼쪽패딩 5문자로 로거 이름 출력.    -->
    <property name="LOG_PATTERN" value="d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n"/>

    <!-- 파일이름에 시간쓰기. 변수?는아닌듯 -->
    <timestamp key="bySecond" datePattern="yyyyMMDD'T'HHmmss"/>
    <!--배포할때마다 파일을 하나 만드는데
    배포는 자주 안한단말이여, 그래서 하루에 한번씩 끊어서 저장해보자-->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/kdt_${bySecond}.log</file>
        <!--로그파일에 추가 or 덮어쓰기-->
        <!--파일 만들땐 상관없을듯-->
        <append>false</append>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <!-- -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.RollingFileAppender">
        <!-- 이름을 설정하고 안하고 차이가 있음.
        이름을 설정하면 가장 최신이 밑에 이름으로 되고
        날짜가 지나면 밑의 패턴을 따라 과거날짜 파일로 바뀜-->
        <file>logs/access.log</file>
        <!-- 무슨파일 만들거임?? 타임머시기는 두타입 다 가지고있음 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/access-%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <logger name="org.prgrms.kdtspringdemo" level="debug">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.prgrms.kdtspringdemo.OrderTester" level="info"/>
    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>